<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Menu_Musik">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <View
                        android:id="@+id/viewHeaderBackground"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/rectangle_menu_musik"
                        android:paddingBottom="20dp"
                        app:layout_constraintCircleRadius="25dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textJudul2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pilih Alat Musik"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textSub2"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/poppinsmedium"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:onClick="All"
                            android:text="All"
                            android:textSize="12dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="179dp"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/poppinsmedium"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:onClick="TtgDesa"
                            android:text="Tentang Limbongan"
                            android:gravity="center"
                            android:textColor="#A83D17"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.5"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/sampel1"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/bt_gambangan"
                            android:layout_width="168dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bg_button_transparan"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom">
                                <TextView
                                    android:id="@+id/textE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="58dp"
                                    android:fontFamily="@font/poppinsextra"
                                    android:text="Gambangan"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/txtdetailE"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Sejarah | Audio | Video"
                                    android:textColor="@color/white"
                                    android:textSize="7dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textE"
                                    app:layout_constraintVertical_bias="0.100000024" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="0.5"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/sampel2"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bt_lesung"
                            android:layout_width="168dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bg_button_transparan"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="58dp"
                                android:fontFamily="@font/poppinsextra"
                                android:text="Lesung Ketintong"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtdetailA"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Sejarah | Audio | Video"
                                android:textColor="@color/white"
                                android:textSize="7dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textA"
                                app:layout_constraintVertical_bias="0.100000024" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.5"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/sampel4"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bt_gambus"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_button_transparan" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom">

                            <TextView
                                android:id="@+id/textB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="58dp"
                                android:fontFamily="@font/poppinsextra"
                                android:text="Gambus Inang-Inang"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtdetailB"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Sejarah | Audio | Video"
                                android:textColor="@color/white"
                                android:textSize="7dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textB"
                                app:layout_constraintVertical_bias="0.100000024" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="24dp"
                        android:layout_weight="0.5"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/sampel3"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/bt_hadra"
                            android:layout_width="168dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bg_button_transparan"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="58dp"
                                android:fontFamily="@font/poppinsextra"
                                android:text="Hadrah Gendang Empat"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtdetailC"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Sejarah | Audio | Video"
                                android:textColor="@color/white"
                                android:textSize="7dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textC"
                                app:layout_constraintVertical_bias="0.100000024" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>
                </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>