<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_gravity="top"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dp"
        android:background="@drawable/white_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageEvent"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/sampel_event" />

            <TextView
                android:id="@+id/JudulEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsextra"
                android:gravity="center_horizontal|left"
                android:lineSpacingExtra="-3sp"
                android:text="Nama Event"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Tanggal Pelaksanaan"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textViewTempat"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Tempat event"
                android:textSize="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>