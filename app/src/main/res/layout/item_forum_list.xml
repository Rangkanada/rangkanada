<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:layout_margin="7dp"
    android:elevation="20dp"
    android:padding="5dp"
    android:paddingBottom="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/namaForum"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsextra"
                android:gravity="center_vertical"
                android:text="Alat Musik"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="TextSizeCheck" />

            <ImageView
                android:id="@+id/tombolBintangForum"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical|end"
                android:layout_weight="1"
                android:backgroundTint="#ED0404"
                android:textAlignment="viewEnd"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>

        <TextView
            android:id="@+id/deskripsiForum"
            android:layout_width="190dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Kumpulan Musik Limbongan"
            android:textColor="@color/teal_700"
            android:textSize="10sp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/totalUser"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Total Anggota : 20"
            android:textColor="@color/teal_700"
            android:textSize="9dp"
            tools:ignore="DuplicateIds,TextSizeCheck" />

        <Button
            android:id="@+id/tombolGabung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#7B3F23"
            android:text="Gabung"
            android:textSize="10sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


