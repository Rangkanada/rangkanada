<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#FFC107" /> <!-- Warna latar belakang -->
        </shape>
    </item>

    <!-- String Pegs -->
    <item android:top="8dp">
        <rotate
            android:fromDegrees="45">
            <shape
                android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#795548" /> <!-- Warna untuk string pegs -->
                <size
                    android:width="16dp"
                    android:height="60dp" /> <!-- Ukuran string pegs -->
            </shape>
        </rotate>
    </item>

    <!-- Body -->
    <item android:top="68dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#8D6E63" /> <!-- Warna untuk badan gambus -->
        </shape>
    </item>

    <!-- Sound Hole -->
    <item android:top="64dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
        <shape
            android:shape="oval">
            <solid android:color="#000000" /> <!-- Warna untuk lubang suara -->
        </shape>
    </item>

    <!-- Neck -->
    <item android:top="8dp">
        <rotate
            android:fromDegrees="-30">
            <shape
                android:shape="line">
                <stroke
                    android:width="20dp"
                    android:color="#795548" /> <!-- Warna untuk leher gambus -->
                <size
                    android:width="16dp"
                    android:height="60dp" /> <!-- Ukuran leher gambus -->
            </shape>
        </rotate>
    </item>

    <!-- Headstock -->
    <item android:top="4dp" android:left="40dp">
        <rotate
            android:fromDegrees="45">
            <shape
                android:shape="rectangle">
                <solid android:color="#795548" /> <!-- Warna untuk headstock -->
            </shape>
        </rotate>
    </item>
</layer-list>
